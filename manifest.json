{
    "author": "Hsuan.Lee@agoda.com",
    "name" : "Code Review Assistant",
    "version" : "0.1",
    "description" : "Chrome extension for sending code review status on commits.",
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png" 
    },
    "manifest_version": 2,
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    }
}
